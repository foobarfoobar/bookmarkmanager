<% @title = t("links.detail_bookmark") %>
<h2><%= t("text.detail_bookmark") %></h2>
<p>
	<b><%= t("activerecord.attributes.bookmark.title") %>:</b>
	<%= @bookmark.title %>
</p>
<p>
	<b><%= t("activerecord.attributes.bookmark.url") %>:</b>
	<%= @bookmark.url %>
</p>
<p>
	<b><%= t("activerecord.attributes.bookmark.comment") %>:</b>
	<%= @bookmark.comment %>
</p>
<p>
	<b><%= t("activerecord.attributes.bookmark.created_at") %>:</b>
	<%= l @bookmark.created_at.getlocal, format: :short %> <!--l:  localize time format, getlocal: wandelt Zeit in lokale Zeit -->
</p>
<p>
	<b><%= t("activerecord.attributes.bookmark.updated_at") %>:</b>
	<%= l @bookmark.updated_at.getlocal %>
</p>
